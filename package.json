{
  "name": "@core/repo",
  "version": "0.0.2",
  "description": "The repo",
  "repository": "https://github.com/chlbri/core-repo.git",
  "author": "chlbri <bri_lvi@icloud.com>",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "build": "pnpm run test && pnpm build:-test",
    "build:-test": "pnpm run tsc && pnpm run lint",
    "test": "jest",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx,yml,json}\"",
    "lint": "pnpm prettier && pnpm eslint -- --fix",
    "rinit": "ts-node \"./wconfig/rinit.ts\" & pnpm pnpm:install",
    "npm:prepublish": "ts-node \"./wconfig/pack.ts\" && pnpm install",
    "npm:publish": "git checkout main && pnpm npm:prepublish && pnpm publish --access public --no-git-checks && git clean -fd && git checkout -- . && pnpm pnpm:install && ts-node \"./wconfig/clean.ts\"",
    "pnpm:install": "pnpm install",
    "publish:all": "pnpm run rinit && pnpm git-publish && pnpm npm:publish",
    "upgrade:core": "pnpm upgrade @core_chlbri/core",
    "upgrade": "pnpm upgrade",
    "git-push": "git push --follow-tags",
    "git-publish": "pnpm build && publish"
  },
  "devDependencies": {
    "@types/edit-json-file": "^1.6.1",
    "@types/fs-extra": "^9.0.13",
    "@core_chlbri/test-machine": "^0.1.740",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/object.omit": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "dayjs": "^1.10.7",
    "dequal": "^2.0.2",
    "edit-json-file": "^1.6.0",
    "eslint": "^8.0.1",
    "faker": "^5.5.3",
    "jest": "^27.3.0",
    "jest-cucumber": "^3.0.1",
    "jest-extended": "^1.1.0",
    "mock-stdin": "^1.0.0",
    "mongodb": "^4.1.3",
    "nanoid": "^3.1.30",
    "object.omit": "^3.0.0",
    "fs-extra": "^10.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@core_chlbri/core": "^0.1.1-dc",
    "@xstate/immer": "^0.3.0",
    "immer": "^9.0.6",
    "xstate": "^4.26.1",
    "zod": "^3.11.6"
  }
}
